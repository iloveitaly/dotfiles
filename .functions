# usage: find_random_open_port [start_port]
function find_random_open_port() {
  local start_port=${1:-1024}
  local max_attempts=100
  local attempt=0
  local port=$start_port

  while (( attempt < max_attempts )); do
    if ! nc -z localhost $port 2>/dev/null; then
      echo $port
      return
    fi
    port=$((port + 1))
    attempt=$((attempt + 1))
  done

  echo "No open port found after $max_attempts attempts, starting from $start_port." > /dev/stderr
  return 1
}

# quickly create a tunnel into another host
function ssh-tunnel() {
  if [ $# -lt 2 ]; then
    echo "Usage: ssh-tunnel remote_host remote_port [local_port]"
    echo "This function sets up SSH port forwarding."
    return 1
  fi

  local remote_host=$1
  local remote_port=$2
  local local_port=${3:-$(find-random-open-port $remote_port)}

  if [[ -z $local_port ]]; then
    echo "Failed to find an open local port."
    return 1
  fi

  echo "Forwarding local port $local_port to remote port $remote_port on $remote_host..."
  set -x
  ssh $remote_host -L ${local_port}:localhost:${remote_port}
}

# TODO probably better to use `op` to create the SSH key
function generate-ssh-key() {
  # Prompt for 1Password entry name
  read "entry_name?Enter 1Password entry name: "

  # Trim whitespace and sanitize entry_name: replace spaces with underscores, remove special characters
  trimmed_entry_name=${entry_name##+([[:space:]])}
  trimmed_entry_name=${trimmed_entry_name%%+([[:space:]])}
  sanitized_entry_name=${trimmed_entry_name// /_}
  sanitized_entry_name=${sanitized_entry_name//[^a-zA-Z0-9_-]/}

  # Check if sanitized_entry_name is empty
  if [[ -z "$sanitized_entry_name" ]]; then
    echo "Error: Entry name cannot be empty after sanitization."
    return 1
  fi

  # Generate Ed25519 SSH key in current directory using sanitized entry name
  ssh-keygen -t ed25519 -C "$sanitized_entry_name" -f "./$sanitized_entry_name" -N "" >/dev/null

  # Output generated file names
  echo "Generated files: $sanitized_entry_name, $sanitized_entry_name.pub"

  # Encode private key to base64
  private_key=$(base64 < "./$sanitized_entry_name")

  # Get public key
  public_key=$(cat "./$sanitized_entry_name.pub")

  # Create 1Password SSH key entry
  op item create --category sshkey --title "$sanitized_entry_name" \
    "private key=$private_key" \
    "public key=$public_key" \
    --vault Personal

  echo "1Password entry '$sanitized_entry_name' created."
}

