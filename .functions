# output all zsh options with pretty colors
# helpful for debugging zsh option states
zsh-pretty-options() {
  local on_color='%F{green}' off_color='%F{red}' reset='%f'
  local value   # renamed from 'status'

  for opt in ${(ko)options}; do
    if [[ $options[$opt] == on ]]; then
      value="${on_color}on${reset}"
    else
      value="${off_color}off${reset}"
    fi
    printf '%-35s %s\n' "$opt" "${(%)value}"
  done
}

