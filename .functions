# Copies each file to the Python starter template, preserving relative paths.
# Files are placed relative to the template root based on their dirname.
function cp-into-template() {
  local template_dir="$HOME/Projects/python/python-starter-template"
  for file in "$@"; do
    local target_dir="$template_dir/$(dirname "$file")"
    mkdir -p "$target_dir"
    cp "$file" "$target_dir/$(basename "$file")"
  done
}

# list all URL schemes and their handlers on macOS
macos-list-schemes() {
  local LSREGISTER="/System/Library/Frameworks/CoreServices.framework/Versions/A/Frameworks/LaunchServices.framework/Versions/A/Support/lsregister"

  print "=== LaunchServices database (URLSchemeBinding) ==="
  "$LSREGISTER" -dump URLSchemeBinding |
    grep '^[a-zA-Z0-9+-]*:' |
    sed 's/^[ \t]*//; s/:[ \t]*/: /' |
    sort

  local PLIST=~/Library/Preferences/com.apple.LaunchServices/com.apple.launchservices.secure.plist

  if [[ -f $PLIST ]]; then
    print "\n=== User overrides: URL schemes ==="
    /usr/libexec/PlistBuddy -c "Print LSHandlers" "$PLIST" 2>/dev/null |
      awk '
        /\bLSHandlerURLScheme =/ { scheme = $NF; sub(/;$/, "", scheme) }
        /\bLSHandlerRoleAll =/ { handler = $NF; sub(/;$/, "", handler) }
        scheme && handler { print scheme ": " handler; scheme = handler = "" }
      ' | sort

    print "\n=== User overrides: Other handlers (UTIs, extensions) ==="
    /usr/libexec/PlistBuddy -c "Print LSHandlers" "$PLIST" 2>/dev/null |
      awk '
        /\bLSHandlerURLScheme =/ { skip = 1; next }
        /\bLSHandlerContentType =/ { type = $NF; sub(/;$/, "", type); skip = 0 }
        /\bLSHandlerContentTag =/ { tag = $NF; sub(/;$/, "", tag); skip = 0 }
        /\bLSHandlerRoleViewer =/ && !skip { handler = $NF; sub(/;$/, "", handler);
          if (type) print "UTI " type ": " handler;
          if (tag) print "ext ." tag ": " handler;
          type = tag = ""
        }
      ' | sort
  else
    print "\n=== User plist not found ==="
  fi
}

